{
    "name": "j-chat-server",
    "version": "1.0.0",
    "description": "server to j-chat",
    "main": "index.js",
    "engines": {
        "node": "16.13.1",
        "npm": "8.1.0"
    },
    "scripts": {
        "dev": "npx nodemon",
        "start": "NODE_ENV=production npm run dev",
        "start:deprecated": "NODE_ENV=production ts-node -r ts-node/register -r tsconfig-paths/register ./build/server/index.js",
        "build:deprecated": "rimraf ./build && tsc",
        "jest": "jest",
        "test": "npm run lint && npm run prettier && npm run jest",
        "lint": "eslint \"**/*.+(js|ts)\"",
        "lint:fix": "eslint --fix \"**/*.+(js|ts)\"",
        "prettier": "prettier --check \"**/*.+(js|ts|json|yml|yaml|md)\"",
        "prettier:fix": "prettier --write \"**/*.+(js|ts|json|yml|yaml|md)\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/justinjeong5/j-chat-server.git"
    },
    "keywords": [
        "j-chat"
    ],
    "author": "justinjeong5",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/justinjeong5/j-chat-server/issues"
    },
    "homepage": "https://github.com/justinjeong5/j-chat-server#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "chalk": "^4.1.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "date-fns": "^2.30.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "mongoose": "^7.5.0",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2",
        "@types/bcryptjs": "^2.4.3",
        "@types/cookie-parser": "^1.4.4",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.198",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^20.6.3",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0"
    },
    "devDependencies": {
        "eslint": "^8.49.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.1"
    }
}
