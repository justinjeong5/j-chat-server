{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@middlewares*": ["middlewares/*"],
            "@models*": ["models/*"],
            "@routes*": ["routes/*"],
            "@server*": ["server/*"]
        },
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
