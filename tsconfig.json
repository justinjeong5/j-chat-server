{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots" : ["./@types", "./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@lib*": ["lib/*"],
            "@middlewares*": ["middlewares/*"],
            "@models*": ["models/*"],
            "@routes*": ["routes/*"],
            "@server*": ["server/*"],
            "types*": ["types/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
