{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "DOM"],
        "module": "commonjs",
        "allowJs": true,
        "outDir": "build",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["node", "express", "jest"],
        "baseUrl": "./src",
        "paths": {
            "@lib*": ["lib/*"],
            "@middlewares*": ["middlewares/*"],
            "@models*": ["models/*"],
            "@routes*": ["routes/*"],
            "@server*": ["server/*"],
            "@socket*": ["socket/*"],
            "types*": ["types/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*", "jest.config.ts", "ecosystem.config.js"],
    "exclude": ["node_modules"]
}
